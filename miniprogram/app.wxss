/**app.wxss**/
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
} 

button {
  background: initial;
}

button:focus{
  outline: 0;
}

button::after{
  border: none;
}
page{
  background: #fff;
  font-family: "Microsoft YaHei";
}
.hide{
  display: none !important;
}
.show{
  display: block !important;
}
.clearfix { zoom:1; }
.clearfix:after { content:""; display:block; clear:both; height:0; }
::-webkit-scrollbar {
width: 0;
height: 0;
color: transparent;
}
/**nav**/
.nav-box{
  width: 100%;
  height: 68rpx;
}
.nav-box .nav-box-scroll{
float: left;
white-space: nowrap;
width: 675rpx;
height: 68rpx;
}
.nav-box .nav-box-li{
    display: inline-block;
    height: 68rpx;
    vertical-align: top;
}
.nav-box .nav-box-li text{
    display: block;
    height: 66rpx;
    margin: 0 28rpx;
    border-bottom:2rpx solid #fff;
    line-height: 70rpx;
    font-size: 28rpx;
    color: #6a6969;
}
.nav-box .nav-box-li.active text {
    color: #e30c26;
    border-color: #e30c26;
}
.nav-box .nav-box-li-hover text{
  color: #e30c26;
  border-color: #e30c26;
}
.nav-box .drop-down {
    position: relative;
    float: right;
    width: 75rpx;
    height: 68rpx;
}
.nav-box .drop-down:before {
    content: '';
    position: absolute;
    left: 0;
    top: 8rpx;
    display: inline-block;
    width: 1px;
    height:54rpx;
    background-color: #f2f2f2;
}
.nav-box .drop-down .drop-down-bg-wrap {
    width: 100%;
    height: 100%;
}
.nav-box .drop-down .drop-down-bg-wrap .drop-down-bg {
    position: absolute;
    top: 26rpx;
    left: 26rpx;
    width: .61867rem;
    height: .40533rem;
    background: url(//status.tuanimg.com/statics/mz/index/img/drop-down-bg.png) no-repeat 0 0;
    background-size: contain;
    -webkit-transition: all .2s linear;
    transition: all .2s linear;
    }
 .nav-box .drop-down .opacity {
    display: none;
    position: absolute;
    top: 68rpx;
    right: 0;
    width:750rpx;
    height:2334rpx;
    background-color: #000;
    opacity: .5;
    z-index: 98;
}
.nav-box .drop-down .drop-down-content {
    display: none;
    position: absolute;
    top: 68rpx;
    right: 0;
    width: 750rpx;
    border-top: .02133rem solid #ccc;
    font-size: .59733rem;
    color: #6a6969;
    background-color: #efeded;
    z-index: 99;
}
.nav-box .drop-down .drop-down-content .drop-down-content-choose {
    position: absolute;
    top: -68rpx;
    left: 0;
    width: 25%;
    height: 68rpx;
    line-height: 70rpx;
    text-align: center;
    background-color: #fff;
}
.nav-box .drop-down .drop-down-content .drop-down-content-tag {
    position: absolute;
    left: 0;
    width: 100%;
    overflow: hidden;
    background-color: #efeded;
    -webkit-transition: all .2s linear;
    transition: all .2s linear;
}
.nav-box .drop-down .drop-down-content .drop-down-tag-list .drop-down-item{
    float: left;
    width: 25%;
    height: 1.87733rem;
    border-right: .02133rem solid #ccc;
    border-bottom: .02133rem solid #ccc;
    box-sizing: border-box;
    line-height: 1.87733rem;
    text-align: center;
    font-size: .59733rem;
}
.nav-box .drop-down .drop-down-content .drop-down-tag-list .drop-down-item a{
    color: #6a6969;
    height: 100%;
}

